        android:scaleY="4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_confuion"
        app:layout_constraintStart_toEndOf="@+id/tv_confuion"
        app:layout_constraintTop_toTopOf="@+id/tv_confuion" />

    <ProgressBar
        android:id="@+id/progressBar_learn_at10"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="198dp"
        android:layout_height="15dp"
        android:layout_marginStart="32dp"
        android:scaleY="4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_psystrike"
