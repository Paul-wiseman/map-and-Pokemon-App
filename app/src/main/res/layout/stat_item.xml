        android:scaleY="4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hydropump"
        app:layout_constraintStart_toEndOf="@+id/tv_hydropump"
        app:layout_constraintTop_toTopOf="@+id/tv_hydropump"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar_learn_at11"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="198dp"
